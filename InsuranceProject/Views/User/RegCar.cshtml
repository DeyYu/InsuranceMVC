@model InsuranceProject.ViewModel.RegCarModel
@{
    ViewBag.Title = "RegCar";
    Layout = "~/Views/User/_ClientLayout.cshtml";
}
<html>
    <body>
        <div class="rego-container">
            <h2>Registration of Car</h2>
            <hr class="Contact-line" />

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label>Mode of Use:</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ModeOfUse, new { htmlAttributes = new { @class = "login-text" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.ModeOfUse, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Registration Number:</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.RegPlate, new { htmlAttributes = new { @class = "login-text" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.RegPlate, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Car Value:</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CarValue, new { htmlAttributes = new { @class = "login-text" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.CarValue, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Submit Request" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }

        <div>
            @Html.ActionLink("Back to vehicle type", "RegVehicle")
        </div>
        </div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }

    </body>
</html>